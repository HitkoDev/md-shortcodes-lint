{
    "name": "remark-hugo-lint",
    "version": "0.2.5",
    "description": "Remark-based linter for Hugo",
    "private": false,
    "repository": {
        "type": "git",
        "url": "git+https://github.com/HitkoDev/md-shortcodes-lint.git"
    },
    "author": "HitkoDev",
    "license": "GPL-3.0",
    "bugs": {
        "url": "https://github.com/HitkoDev/md-shortcodes-lint/issues"
    },
    "homepage": "https://github.com/HitkoDev/md-shortcodes-lint/tree/master/packages/remark-hugo-lint#readme",
    "main": "dist/index.js",
    "esnext": "dist/index.js",
    "module": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "test": "mocha --parallel",
        "coverage": "nyc mocha",
        "build": "tsc -p tsconfig.production.json",
        "watch": "tsc -p tsconfig.production.json -w",
        "lint": "tslint --fix --project .",
        "prepublishOnly": "yarn build"
    },
    "files": [
        "dist"
    ],
    "dependencies": {
        "front-matter": "^4.0.2",
        "js-yaml": "^3.14.0",
        "remark": "^12.0.1",
        "remark-hugo-shortcodes": "^0.2.5",
        "remark-preset-lint-markdown-style-guide": "^3.0.1"
    },
    "devDependencies": {
        "@testdeck/mocha": "^0.1.2",
        "@types/chai": "^4.2.12",
        "@types/chai-as-promised": "^7.1.3",
        "@types/js-yaml": "^3.12.5",
        "@types/mocha": "^8.0.3",
        "@types/node": "^14.11.2",
        "chai": "^4.2.0",
        "chai-as-promised": "^7.1.1",
        "mocha": "^8.1.3",
        "source-map-support": "^0.5.19"
    },
    "nyc": {
        "extension": [
            ".ts"
        ],
        "include": [
            "src"
        ],
        "all": true
    }
}
